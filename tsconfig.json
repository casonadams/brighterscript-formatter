{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": [
                "types/*"
            ]
        },
        "noImplicitAny": false,
        "target": "es5",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts"
    ]
}